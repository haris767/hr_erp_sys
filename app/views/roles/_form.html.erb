<%= form_with(model: @role, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= form.submit class: "btn btn-success" %>
    <%= link_to "Back", roles_path, class: "btn btn-secondary" %>
  </div>
<% end %>
