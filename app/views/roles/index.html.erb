<h1>Roles</h1>
<%= link_to "New Role", new_role_path, class: "btn btn-primary" %>
<table class="table mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td>
          <%= link_to "Edit", edit_role_path(role), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", role_path(role), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
