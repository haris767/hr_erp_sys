<h1><%= @user_shift.new_record? ? 'Assign New Shift to User' : 'Edit Shift Assignment' %></h1>

<%= form_with model: user_shift, local: true do |f| %>
  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Shift Assignment</h3>
    </div>
    <div class="card-body">
      <div class="form-group">
        <%= f.label :user_id, class: "control-label" %>
        <%= f.collection_select :user_id, User.all, :id, :name, prompt: "Select User", class: "form-control select2" %>
      </div>

      <div class="form-group">
        <%= f.label :shift_id, class: "control-label" %>
        <%= f.collection_select :shift_id, Attendance::Shift.all, :id, :name, prompt: "Select Shift", class: "form-control select2" %>
      </div>

      <%= f.submit "Save", class: "btn btn-success btn-block" %>
    </div>
  </div>
<% end %>
