<div class="container-fluid mt-3">
 
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title">Leave Types</h3>
      <%= link_to 'New Leave Type', new_leave_leave_type_path, class: "btn btn-primary" %>
    </div>
    <div class="card-body p-0">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Paid</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @leave_types.each do |leave_type| %>
            <tr>
              <td><%= leave_type.name %></td>
              
              <td>
                <span class="badge <%= leave_type.paid ? 'bg-success' : 'bg-danger' %>">
                  <%= leave_type.paid ? 'Yes' : 'No' %>
                </span>
              </td>
              <td><%= leave_type.description.presence || '-' %></td>
              <td>
                <%= link_to 'Edit', edit_leave_leave_type_path(leave_type), class: 'btn btn-sm btn-warning' %>
                <%= link_to 'Delete', leave_leave_type_path(leave_type), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
