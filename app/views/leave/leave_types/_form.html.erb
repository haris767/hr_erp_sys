<%= form_with model: leave_type, local: true, class: "p-3" do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group form-check">
    <%= form.check_box :paid, class: "form-check-input" %>
    <%= form.label :paid, "Is Paid Leave?", class: "form-check-label" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
