
<div class="container mt-4">
  <h1>Users</h1>
  <%#= link_to 'New Employee', new_employee_path, class: "btn btn-primary mb-3" %>
<%= form_with(url: hr_users_path, method: :get, local: true) do |form| %>
  <%= form.text_field :query, placeholder: "Search users..." %>
  <%= form.submit "Search" %>
<% end %>


  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Full Name</th>
        <th>email</th>
        <th>Action</th>
        
      </tr>
    </thead>
    <tbody>
         <% if @users.any? %>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          
          <td>
            
            <%= link_to 'Edit', edit_user_registration_path, class: "btn btn-sm btn-warning" %>
            
          </td>
         
        </tr>
      <% end %>
      <% else %>
    <tr>
      <td colspan="4" class="text-center">No users found.</td>
    </tr>
  <% end %>
    </tbody>
  </table>
</div>
